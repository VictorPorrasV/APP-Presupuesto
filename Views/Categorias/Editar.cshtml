@model Categorias


@{

    ViewData["Tittle"] = "Editar categoria";
}


<div class="container mt-5">
    <div class="card  shadow-sm">
        <div class="card-body">
            <h1 class="h3 mb-3">Editar Categoria</h1>
            <h5 class="mb-4">
                La Categoria nos permite indicar en que gastamos nuestro dinero, tambien, de donde provienen nuestros ingresos.
            </h5>

            <form asp-action="Editar" novalidate>
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="Id">
                <div class="mb-3">
                    <label asp-for="Nombre" class="form-label">Nombre</label>
                    <input asp-for="Nombre" class="form-control  border-secondary" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="TipoOperacionId" class="form-label">Tipo de Operación</label>
                    <select asp-for="TipoOperacionId" asp-items="Html.GetEnumSelectList<TipoOperaciones>()" class="form-select bg-dark text-light border-secondary"></select>
                    <span asp-validation-for="TipoOperacionId" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-primary">Enviar</button>
                    <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>


